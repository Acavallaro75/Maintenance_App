<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #646E78;"
            xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="giba.controller.ForgotPasswordController">
    <AnchorPane layoutY="100.0" prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: #FFFFFF;">
        <GridPane layoutX="228.0" layoutY="159.0" prefHeight="182.0" prefWidth="344.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="344.0" minWidth="10.0" prefWidth="344.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="167.5999755859375" minWidth="0.0"
                                   prefWidth="0.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <JFXTextField fx:id="firstName" promptText="First Name"/>
            <JFXTextField fx:id="lastName" promptText="Last Name" GridPane.rowIndex="1"/>
            <JFXTextField fx:id="username" promptText="Username" GridPane.rowIndex="2"/>
        </GridPane>
        <JFXButton layoutX="342.0" layoutY="385.0" onAction="#getPassword" prefHeight="40.0" prefWidth="115.0"
                   style="-fx-background-color: #8D98A7;" text="Get Password" textFill="WHITE">
