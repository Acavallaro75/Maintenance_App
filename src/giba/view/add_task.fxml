<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #646E78;"
            xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="giba.controller.AddTaskController">
    <AnchorPane layoutX="-1.0" layoutY="100.0" prefHeight="500.0" prefWidth="800.0"
                style="-fx-background-color: white;">
        <JFXTextField fx:id="taskName" layoutX="150.0" layoutY="70.0" prefHeight="25.0" prefWidth="213.0"
                      promptText="Name of Task"/>
        <JFXComboBox fx:id="frequency" layoutX="436.0" layoutY="70.0" prefHeight="25.0" prefWidth="213.0"
                     promptText="Frequency"/>
        <JFXButton layoutX="342.0" layoutY="397.0" onAction="#addTaskToSchedule" prefHeight="40.0" prefWidth="115.0"
                   style="-fx-background-color: #8D98A7;" text="Add Task" textFill="WHITE">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </JFXButton>
        <JFXTextArea fx:id="details" layoutX="150.0" layoutY="137.0" prefHeight="225.0" prefWidth="500.0"
                     promptText="Enter important details about the task being created"/>
    </AnchorPane>
    <Label layoutX="347.0" layoutY="34.0" text="Add Task" textFill="WHITE">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>
    <JFXButton layoutX="14.0" layoutY="37.0" onAction="#goBack" prefHeight="30.0" prefWidth="80.0"
               style="-fx-background-color: #8D98A7;" text="Back" textFill="WHITE">
        <font>
            <Font name="System Bold" size="12.0"/>
        </font>
    </JFXButton>
</AnchorPane>
